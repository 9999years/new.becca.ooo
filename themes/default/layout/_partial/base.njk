<!doctype html>
<html lang=en-US>
<meta charset=utf-8>
<title>{% if page.title %}{{ page.title }} @ {% endif %}{{ config.title }}</title>
<meta name=description content="{{ page.description|d(site.description) }}">
<meta name=viewport content="width=device-width, initial-scale=1">
<link rel=icon sizes=16x16     type=image/png href=/img/favicon-16.png>
<link rel=icon sizes=64x64     type=image/png href=/img/favicon-64.png>
<link rel=icon sizes=96x96     type=image/png href=/img/favicon-96.png>
<link rel=icon sizes=128x128   type=image/png href=/img/favicon-128.png>
<link rel=icon sizes=180x180   type=image/png href=/img/favicon-180.png>
<link rel=icon sizes=192x192   type=image/png href=/img/favicon-192.png>
<link rel=icon sizes=196x196   type=image/png href=/img/favicon-196.png>
<link rel=icon sizes=256x256   type=image/png href=/img/favicon-256.png>
<link rel=icon sizes=512x512   type=image/png href=/img/favicon-512.png>
<link rel=icon sizes=1024x1024 type=image/png href=/img/favicon-1024.png>
<link rel=icon sizes=32x32     type=image/png href="data:image/png;base64,">
<link rel=manifest href=/manifest.json>
{#- to-do: include opengraph tags #}
<meta name=theme-color content=#1741e8>
<link rel=stylesheet type=text/css href=/styles/main.css>
{%- for css in page.extra_css -%}
    {% if css.integrity -%}
<link rel=stylesheet type=text/css href="{{ css.href }}" integrity="{{ css.integrity }}" crossorigin=anonymous>
    {%- else -%}
<link rel=stylesheet type=text/css href="/styles/{{ css }}.css">
    {%- endif %}
{%- endfor %}
<div id=container>
    <header>
        <a aria-label="Skip to main content" href="#main"></a>
        <nav>
            <ul>
                <li><a href="{{ config.url }}" aria-label="Homepage">{{ config.title }}</a></li>
                <li><a href="/about" aria-label="Read a short bio about me">about</a></li>
                <li><a href="/resume" aria-label="Read my résumé">résumé</a></li>
                <li><a href="/contact" aria-label="Get my contact information">contact</a></li>
            </ul>
        </nav>
    </header>
    <main id=main>
        {{ page.content }}
        {% block post_content %}{% endblock -%}
    </main>
</div>